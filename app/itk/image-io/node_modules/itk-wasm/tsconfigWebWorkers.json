{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "moduleResolution": "node",
    "target": "es2017",
    "module": "es2020",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./src/vendor-types"]
  },
  "include": ["./src/web-workers/*.ts"],
  "exclude": ["dist", "node_modules"]
}
